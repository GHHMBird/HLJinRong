<?xml version="1.0" encoding="utf-8"?>

<com.haili.finance.widget.SlidingFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical">

            <EditText
                android:id="@+id/edit_old_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:background="@drawable/bg_grey_bo_white"
                android:hint="请输入原登录密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:padding="8dp"
                android:textColorHint="@color/text_grey"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_new_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_grey_bo_white"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:digits="1234567890zxcvbnmasdfghjklqwertyuiopQWERTYUIOPASDFGHJKLZXCVBNM"
                android:maxLength="16"
                android:padding="8dp"
                android:textColorHint="@color/text_grey"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_new_password_second"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:digits="1234567890zxcvbnmasdfghjklpoiuytrewqQWERTYUIOPASDFGHJKLZXCVBNM"
                android:background="@drawable/bg_grey_bo_white"
                android:hint="请确认新密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:padding="8dp"
                android:textColorHint="@color/text_grey"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/user_attention"
                android:text="请输入6-16位由数字、字母组合成的密码"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/change_login_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:text="忘记登录密码？"
                    android:textSize="14sp" />
            </RelativeLayout>


            <Button
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_btn_home_pro2"
                android:elevation="5dip"
                android:enabled="false"
                android:text="修改"
                android:textColor="@color/white"
                android:textSize="18sp" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</com.haili.finance.widget.SlidingFrameLayout>

