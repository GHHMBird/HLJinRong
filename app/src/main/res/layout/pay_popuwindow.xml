<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/line_grey"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13.5dp"
            android:paddingLeft="17.5dp"
            android:paddingRight="17.5dp"
            android:paddingTop="14.5dp"
            android:text="取消"
            android:textColor="@color/text_main"
            android:textSize="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_comit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13.5dp"
            android:paddingLeft="17.5dp"
            android:paddingRight="17.5dp"
            android:paddingTop="14.5dp"
            android:text="确定"
            android:textColor="@color/text_red"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:paddingTop="16dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="输入支付密码"
                android:gravity="center_horizontal"
                android:textColor="@color/text_main"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="投资金额："
                android:textColor="@color/text_main"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/text_main"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/text_main"
                android:textSize="16dp" />
        </LinearLayout>


        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="19.5dp"
            android:background="@drawable/bg_grey_bo"
            android:hint="请输入支付密码"
            android:inputType="numberPassword"
            android:maxLines="9"
            android:padding="10dp"
            android:textSize="14dp" />

    </LinearLayout>
</LinearLayout>