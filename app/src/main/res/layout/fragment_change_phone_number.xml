<?xml version="1.0" encoding="utf-8"?>
<com.haili.finance.widget.SlidingFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_old_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_grey_bo_white"
                android:hint="请输入旧手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:padding="10dp"
                android:textColorHint="@color/text_grey"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edit_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_grey_bo_white"
                android:hint="请输入实名认证时的身份证号码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:padding="10dp"
                android:textColorHint="@color/text_grey"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edit_new_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_grey_bo_white"
                android:hint="请输入新手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:padding="10dp"
                android:textColorHint="@color/text_grey"
                android:textSize="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_grey_bo_white"
                    android:hint="请输入短信验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="10dp"
                    android:textColorHint="@color/text_grey"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_getmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg_getmsg"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="22.5dp"
                android:layout_marginRight="22.5dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_home_pro2"
                android:elevation="5dip"
                android:enabled="false"
                android:text="修改"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/change_phone_number_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</com.haili.finance.widget.SlidingFrameLayout>